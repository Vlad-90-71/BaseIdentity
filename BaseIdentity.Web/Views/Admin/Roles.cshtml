@using BaseIdentity.Data.Identity
@model IEnumerable<AppRole>
@{
    ViewBag.Title = "Roles";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h3>Roles</h3>
    <a class="btn btn-success" asp-action="CreateRole">Create New Role</a>
</div>

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>Name</th>
            <th style="width:180px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                    <button type="button"
                            class="btn btn-outline-danger btn-sm"
                            data-bs-toggle="modal"
                            data-bs-target="#confirmDeleteRoleModal"
                            data-role-id="@role.Id"
                            data-role-name="@role.Name">
                        Delete
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (TempData["Error"] is string err)
{
    <div class="alert alert-danger">@err</div>
}

<!-- Modal -->
<div class="modal fade" id="confirmDeleteRoleModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Delete role <strong id="roleName"></strong>?
            </div>
            <div class="modal-footer">
                <form id="deleteRoleForm" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="name" id="roleNameHidden" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('confirmDeleteRoleModal').addEventListener('show.bs.modal', function (event) {
            var btn = event.relatedTarget;
            var id = btn.getAttribute('data-role-id');
            var name = btn.getAttribute('data-role-name');
            document.getElementById('roleName').textContent = name;
            document.getElementById('roleNameHidden').value = name;
            document.getElementById('deleteRoleForm').action = '/Admin/DeleteRole/' + id;
        });
    </script>
}
