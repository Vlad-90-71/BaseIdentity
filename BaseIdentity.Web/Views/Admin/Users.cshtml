@using BaseIdentity.Data.Identity
@model IEnumerable<AppUser>
@{
    ViewBag.Title = "Users";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h3>Users</h3>
    <a class="btn btn-success" asp-action="CreateUser">Create New User</a>
</div>

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>Email</th>
            <th>Roles</th>
            <th>Admin</th>
            <th style="width:220px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>
                    @foreach (var role in user.Roles)
                    {
                        if (role.Name == "Admin")
                        {
                            <span class="badge bg-danger me-1">@role.Name</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary me-1">@role.Name</span>
                        }
                    }
                </td>
                <td>
                    @if (user.IsAdmin)
                    {
                        <span class="badge bg-danger">Admin</span>
                    }
                    else
                    {

                        <span class="badge bg-secondary">No</span>
                    }
                </td>
                <td>
                    <a class="btn btn-primary btn-sm" asp-action="EditRole" asp-route-id="@user.Id">Edit Role</a>
                    <button type="button"
                            class="btn btn-outline-danger btn-sm"
                            data-bs-toggle="modal"
                            data-bs-target="#confirmDeleteUserModal"
                            data-user-id="@user.Id"
                            data-user-email="@user.Email">
                        Delete
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (TempData["Error"] is string err)
{
    <div class="alert alert-danger">@err</div>
}

<!-- Modal -->
<div class="modal fade" id="confirmDeleteUserModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Delete user <strong id="userEmail"></strong>?
            </div>
            <div class="modal-footer">
                <form id="deleteUserForm" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="email" id="emailHidden" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('confirmDeleteUserModal').addEventListener('show.bs.modal', function (event) {
            var btn = event.relatedTarget;
            var id = btn.getAttribute('data-user-id');
            var email = btn.getAttribute('data-user-email');
            document.getElementById('userEmail').textContent = email;
            document.getElementById('emailHidden').value = email;
            document.getElementById('deleteUserForm').action = '/Admin/DeleteUser/' + id;
        });
    </script>
}
